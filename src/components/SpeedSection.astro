---
import { cn } from "@lib/utils";
import Container from "./Container.astro";
import {progress} from "@tailus/themer-progress"
---

<section>
    <Container>
        <div class="text-center">
            <h2 class="text-3xl text-gray-950 dark:text-white font-semibold md:text-4xl">Plus simple que toutes les alternatives</h2>
            <p class="mt-4 text-gray-600 dark:text-gray-400">Sport Copilot, au service de ton entrainement, toujours à ta disposition.</p>
        </div>
        <div class="my-12 p-[--card-padding] overflow-hidden lg:aspect-video flex rounded-[--card-border-radius] bg-gray-100 dark:bg-[--card-dark-bg]">
            <div class="max-w-3xl w-full h-fit m-auto space-y-12">
                <div>
                    <h3 class="text-2xl font-bold text-gray-600 dark:text-gray-400">
                        <span class="text-gray-950 dark:text-white">Sport Copilot optimise</span>
                        ton entrainement plus efficacement que tous les autres outils.
                    </h3>
                </div>
                <div class="space-y-6">
                    <div>
                        <div class={progress.root}>
                            <div class={cn(progress.indicator.gradient, "w-[98%] from-primary-600 to-accent-300")}></div>
                        </div>
                        <div class={progress.message}>Sport Copilot 98%</div>
                    </div>
                    <div>
                        <div class={progress.root}>
                            <div class={cn(progress.indicator.gradient, "w-[68%] from-gray-600 to-gray-400")}></div>
                        </div>
                        <div class={progress.message}>Coach Individuel 68%</div>
                    </div>
                    <div>
                        <div class={progress.root}>
                            <div class={cn(progress.indicator.gradient, "w-[63%] from-gray-600 to-gray-400")}></div>
                        </div>
                        <div class={progress.message}>Coach Groupe 63%</div>
                    </div>
                    <div>
                        <div class={progress.root}>
                            <div class={cn(progress.indicator.gradient, "w-[58%] from-gray-600 to-gray-400")}></div>
                        </div>
                        <div class={progress.message}>Séances en club 58%</div>
                    </div>
                    <div>
                        <div class={progress.root}>
                            <div class={cn(progress.indicator.gradient, "w-[54%] from-gray-600 to-gray-400")}></div>
                        </div>
                        <div class={progress.message}>entrainement freestyle 54%</div>
                    </div>
                </div>
            </div>
        </div>
    </Container>
</section>